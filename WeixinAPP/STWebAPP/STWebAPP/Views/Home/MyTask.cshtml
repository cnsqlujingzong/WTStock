@model IEnumerable<BussModule.Biz.Model.Task>
@{
    ViewBag.Title = "我的任务";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles{
    <style>
    .mui-table h4, .mui-table h5, .mui-table .mui-h5, .mui-table .mui-h6, .mui-table p {
        margin-top: 0;
    }

    .mui-table h4 {
        line-height: 21px;
        font-weight: 500;
    }

    .mui-table .oa-icon {
        position: absolute;
        right: 0;
        bottom: 0;
    }

    .mui-table .oa-icon-star-filled {
        color: #f14e41;
    }
</style>
    }
<header class="mui-bar mui-bar-nav">
    <a class="mui-action-back mui-icon mui-icon-left-nav mui-pull-left"></a>
    <h1 class="mui-title">我的任务</h1>
</header>
<div class="mui-content">
    <ul class="mui-table-view mui-table-view-striped mui-table-view-condensed">
      @if (Model == null)
      {
          <li>
              <h3 style="text-align:center">没有数据！</h3>
          </li>
        
      }
      else { 
        foreach (var item in Model)
        {
            <li class="mui-table-view-cell">
                <div class="mui-table">
                    <div class="mui-table-cell mui-col-xs-10">
                        <h4 class="mui-ellipsis">@item.Summary</h4>
                        <h5>发起时间：@string.Format("{0:yyyy-MM-dd HH:mm:ss}",item._Date) </h5>
                        <h5>截止时间：@string.Format("{0:yyyy-MM-dd HH:mm:ss}", item.ExeDate) </h5>
                       <p class="mui-h6 mui-ellipsis">@item.TaskRemark</p>
                    </div>
                    <div class="mui-table-cell mui-col-xs-2 mui-text-right">
                        <span class="mui-h5">@item.Status</span>
                    </div>
                </div>
            </li>
        }
      }
        
   
        
    </ul>
</div>
<div>
   <p><a href="/home/SendWeixinMsg">发消息测试</a></p> 
</div>
<div>
    <p><a href="/home/UploadImg">上传图片测试</a></p>
</div>
