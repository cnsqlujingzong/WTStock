<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <meta name="keywords" content="" />
      <meta name="description" content="" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/css/mui.min.css"/>
    @RenderSection("styles", required: false)
    <style type="text/css">
        #list {
            /*避免导航边框和列表背景边框重叠，看起来像两条边框似得；*/
            margin-top: -1px;
        }
        /**正在加载模态窗口**/
 #modal-bg{ display: none; position: fixed; top: 0%; left: 0%; width: 100%; height: 100%; background-color: black; 
            z-index:1001; -moz-opacity: 0.7; opacity:.7; filter: alpha(opacity=70);}
 #modal-show{display: none;position: absolute;position: fixed;top: 40%; left: 40%; margin:-31px 0 0 -31px; z-index:1002; overflow: auto;}
    </style>

</head>
<body>
    <div id="modal-bg"></div>
    <div id="modal-show">
        <img src="/content/img/ico/loading.gif" />
    </div>

    <div class="main-container">@RenderBody()</div>

</body>
</html>
<script src="~/Scripts/zepto.min.js"></script>
<script src="~/Scripts/mui.min.js"> </script>
<script src="~/Scripts/Base.js"></script>
@RenderSection("scripts", required: false)
