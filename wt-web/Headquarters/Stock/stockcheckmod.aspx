<script language="javascript" type="text/javascript">
function ChkID(id)
{
    ClrID(id);
}

function ChkIDs(id,unitid)
{
    ClrID4(id);
    $("hfUnitID").value=unitid;
}

function EnterTextBox(event, obj)
{
    if(event.keyCode == 13&&!isNull(obj.value))
    {
        if(!isNull(obj.value))
        {
            $("btnSure").click();
        }
    }
}

function ChkSchGds()
{
    if($("ddlStock").value=="-1")
    {
        window.alert("操作失败！请选择盘点仓库");
        $("ddlStock").focus();
        return false
    }
    if(isNull($("tbCon").value))
    {
         window.alert("请输入查询内容！");
        $("tbCon").focus();
        return false
    }
}

function SltGoods()
{
    if($("ddlStock").value=="-1")
    {
        window.alert("请选择盘点仓库");
        $("ddlStock").focus();
        return false
    }
    
    parent.ShowDialog1(800, 520, 'Stock/SltGoodsChk.aspx?istock='+$("ddlStock").value, '选择产品');
}

function ChkSave()
{
    if(isNull($("tbDate").value))
    {
        window.alert("操作失败！日期不能为空");
        $("tbDate").focus();
        return false
    }
    
   if($("ddlOperator").value=="-1")
    {
        window.alert("操作失败！制单人不能为空");
        $("ddlOperator").focus();
        return false
    }
    if($("ddlStock").value=="-1")
    {
        window.alert("操作失败！请选择盘点仓库");
        $("ddlStock").focus();
        return false
    }
}
</script>
